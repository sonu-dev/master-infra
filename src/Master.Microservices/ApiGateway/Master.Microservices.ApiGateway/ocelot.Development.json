{
  "Routes": [

    // OrderService
    {
      "DownstreamPathTemplate": "/api/Ping",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      // This rate limit configuration will apply only for this service call
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      // Cache configuration
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "productcategoriescache"
      },
      "UpstreamPathTemplate": "/OrderPing",
      "UpstreamHttpMethod": [ "GET" ],
      "Key": "order-ping",
      "SwaggerKey": "pingorder"
    },

    // PaymentService
    {
      "DownstreamPathTemplate": "/api/Ping",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5002"
        }
      ],
      "UpstreamPathTemplate": "/PaymentPing",
      "UpstreamHttpMethod": [ "GET" ],
      "Key": "payment-ping"
    }
  ],
  // Aggregates different api responses
  "Aggregates": [
    {
      "RouteKeys": [
        "order-ping",
        "payment-ping"
      ],
      "UpstreamPathTemplate": "/PingAggregate"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "pingorder",
      "Config": [
        {
          "Name": "Orders API",
          "Version": "v1",
          "Url": "http://localhost:5001/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "X-Correlation-Id", // correlation Id
    "BaseUrl": "http://localhost:5000"
  }
}